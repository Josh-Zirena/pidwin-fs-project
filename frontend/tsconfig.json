{
  "compilerOptions": {
    "target": "esnext", // use modern JS
    "useDefineForClassFields": true, // Vite likes this
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true, // skip checking 3rd-party d.ts
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "types": ["node", "vite/client"]
  },
  "include": ["src", "vite.config.ts"] // ‚Üê make TS load your config file
}
